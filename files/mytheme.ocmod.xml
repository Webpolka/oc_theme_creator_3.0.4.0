<?xml version="1.0" encoding="utf-8"?>
<modification>
    <name>%Name% Start Modificator</name>
    <code>%name%_mod</code>
    <version>1.0</version>
    <author>Your Name</author>

    <!-- Пример: подключаем свой CSS в <head> -->
    <file path="catalog/view/theme/*/template/common/header.twig">
        <search><![CDATA[</head>]]></search>
        <add position="before"><![CDATA[
            <link href="catalog/view/theme/%name%/stylesheet/style.css" rel="stylesheet" />
        ]]></add>
    </file>

    <!-- Пример: подключаем JS в футер -->
    <file path="catalog/view/theme/*/template/common/footer.twig">
        <search><![CDATA[</body>]]></search>
        <add position="before"><![CDATA[
            <script src="catalog/view/theme/%name%/javascript/main.js"></script>
        ]]></add>
    </file>

    <!-- Пример: добавим класс в <html> (полезно для темизации) -->
    <file path="catalog/view/theme/*/template/common/header.twig">
        <search><![CDATA[<html]]></search>
        <add position="after"><![CDATA[ class="%name%"]]></add>
    </file>

    <!-- Пример: фикс мелких багов OpenCart -->
    <file path="catalog/controller/common/home.php">
        <search><![CDATA[$data['column_right']]]></search>
        <add position="before"><![CDATA[
            // %name% injected logic
        ]]></add>
    </file>

</modification>
